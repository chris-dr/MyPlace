<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/imagePlaceIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/ic_item_place_36dp" />

    <TextView
        android:id="@+id/textPlaceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/adapterPlaces_textRightMargin"
        android:layout_toRightOf="@+id/imagePlaceIcon"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textPlaceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPlaceTitle"
        android:layout_marginRight="@dimen/adapterPlaces_textRightMargin"
        android:layout_marginTop="@dimen/adapterPlaces_textTopMargin"
        android:layout_toRightOf="@+id/imagePlaceIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/adapterPlaces_descrFontSize" />

    <TextView
        android:id="@+id/textPlaceUrlLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPlaceAddress"
        android:layout_marginRight="@dimen/adapterPlaces_textRightMargin"
        android:layout_marginTop="@dimen/adapterPlaces_textTopMargin"
        android:layout_toRightOf="@+id/imagePlaceIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/selector_place_url_text"
        android:textSize="@dimen/adapterPlaces_descrFontSize" />

    <TextView
        android:id="@+id/imageButtonFavorite"
        android:layout_width="@dimen/adapterPlaces_favoriteSize"
        android:layout_height="@dimen/adapterPlaces_favoriteSize"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_favorite_star" />

</RelativeLayout>